{
   "model": {
      "framework":                     "pytorch",
      "model":                         "pointnet"
   },
   "optimizer": {
      "name":                          "adam",
      "lr":                            0.0001
   },
   "loss": {
      "func":                          "pointnet_class_loss",
      "lrsched":                       "StepLR",
      "lrsched_step_size":             2

   },
   "data_handling": {
