{
   "model": {
      "framework":                     "pytorch",
      "model":                         "pointnet1d"
   },
   "optimizer": {
      "name":                          "adam",
      "lr":                            0.001,
      "lrsched":                       "StepLR",
      "lrsched_step_size":             2,
      "lrsched_gamma":                 0.5
   },
   "loss": {
      "func":                          "pointnet_class_loss"

   },
   "data_handling": {
      "input_format":                  "csv",
      "train_glob":                    "/Users/jchilders/workdir/ml_data/atlas/csv_data/100GEV_0ETA_0PHI/train/*",
      "valid_glob":                    "/Users/jchilders/workdir/ml_data/atlas/csv_data/100GEV_0ETA_0PHI/valid/*",
      "evt_per_file":                  1,
      "image_shape":                   [1361,4],
      "shuffle":                       true,
      "classes":                       ["l-jet","c-jet","b-jet"],
      "class_nums":                    [0,4,5,11],
      "eta_offset":                    -3,
      "eta_diviser":                    6,
      "phi_offset":                    -3.1415926536,
      "phi_diviser":                   6.2831853072,
      "r_offset":                      0,
      "r_diviser":                     4000
   },
   "training": {
      "batch_size":                    20,
      "epochs":                        100,
      "steps_per_valid":               100
   }
}
